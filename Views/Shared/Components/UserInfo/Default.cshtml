@model User


@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer


<li class="list-group-item d-flex justify-content-between align-items-center">
    <div class="col-2 align-items-center">
        <img src="@Model.PhotoUrl" class="rounded-circle mt-2" width="64" height="64" />
    </div>
    <div class="col-10">
        <div class="d-flex bd-highlight justify-content-between">
            <div class="text-left">
                <h5>@Model.Name @Model.Surname</h5>
                <a asp-controller="Account" asp-action="Index" asp-route-userName="@Model.UserName">
                    @@@Model.UserName
                </a>
            </div>
            <div class="align-self-center">
                <a class="btn btn-sm btn-outline-danger" asp-controller="Users" asp-action="Delete"
                   asp-route-userId="@Model.Id">@Localizer["Delete"]</a>
            </div>
        </div>
    </div>
</li>