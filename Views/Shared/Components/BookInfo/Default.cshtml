@model Book

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .checked {
        color: orange;
        }
    </style>
</head>

<tr>
    <td><img src="@Model.ImgUrl" class="rounded-circle mt-2" width="64" height="64" /></td>
    <td><a href="#">@Model.Title</a></td>
    <td>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
    </td>
    <td>
        <p>@Model.Author.FirstName</p>
        <p class="text-secondary">@Model.Author.LastName</p>
    </td>
    <td class="text-center align-middle" style="font-size: 1.1em">@Model.PagesNumber</td>
    <td class="text-center align-middle" style="font-size: 1.1em">@Model.PublicationYear</td>
    @if(User.IsInRole("Moderator"))
    {
    <td class="align-middle">
        <a class="btn btn-sm btn-outline-danger" asp-controller="Books" asp-action="Delete"
            asp-route-bookId="@Model.Id">Delete</a>
    </td>
    }
</tr>
