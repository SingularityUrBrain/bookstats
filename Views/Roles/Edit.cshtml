@using Microsoft.AspNetCore.Identity
@model ChangeRoleViewModel

<h3>Edit roles for user @Model.UserEmail</h3>

<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserID" />
    <div class="form-group mt-3">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <input type="checkbox" aria-label="@role.Name" name="roles"
                               value="@role.Name"
                               @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />
                    </div>
                </div>
                <input class="form-control" value="@role.Name" readonly>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Save changes</button>
</form>