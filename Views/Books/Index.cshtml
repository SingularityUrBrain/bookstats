@model IEnumerable<Book>
@{
    ViewData["Title"] = "Book database";
}

<body>
    <div class="text-left mt-2">
        <h3 class="display-6">@ViewData["Title"]</h3>
    </div>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Cover</th>
                    <th scope="col">Title</th>
                    <th scope="col">Rating</th>
                    <th scope="col">Author</th>
                    <th scope="col">PageNumber</th>
                    <th scope="col">PublicationYear</th>
                    @if (User.IsInRole("Moderator"))
                    {
                        <th scope="col">Action</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model.OrderByDescending(b => b.Rating))
                {
                    @await Component.InvokeAsync("BookInfo", new { id = b.Id });
                }
            </tbody>
        </table>
    </div>
</body>
