@model IEnumerable<User>

@{
    ViewData["Title"] = "User control panel";
}

<body>
    <div class="text-left mt-2">
        <h3 class="display-6">@ViewData["Title"]</h3>
    </div>
    <hr />
    <div>
        <div class="list-group">
            @foreach (var a in Model.OrderByDescending(a => a.NormalizedUserName))
            {
            <p>@a.Name @a.UserName @a.Email</p>
            <br >
                @*@await Component.InvokeAsync("UserManagement", new { id = a.Id });*@
            }
        </div>
    </div>
</body>